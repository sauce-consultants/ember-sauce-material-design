{{smd-header
  title="Dropdown Menu"
  backIcon="arrow_back"
  backAction="back"
  scrolling=true
}}

<div class="smd-page">

    <header class="smd-page__header" id="top">
      <h1 class="smd-page__title">Default Dropdown</h1>
    </header>

    <section class="smd-page__body">

      <p>Basic dropdown text menu with text options.</p>

      {{#smd-dropdown text="Text Menu"}}
        {{#smd-dropdown-item}}Item 1{{/smd-dropdown-item}}
        {{#smd-dropdown-item}}Item 2{{/smd-dropdown-item}}
        {{#smd-dropdown-item}}Item 3{{/smd-dropdown-item}}
      {{/smd-dropdown}}

      {{code-snippet name="smd-dropdown.hbs"}}

    </section>

    <header class="smd-page__header" id="top">
      <h1 class="smd-page__title">Icon Dropdown</h1>
    </header>

    <section class="smd-page__body">

      <p>Dropdown menu with an icon button and item states.</p>

      {{#smd-dropdown icon="more_vert"}}
        {{smd-dropdown-item text="Item 4" action="menuItemClicked"}}
        {{smd-dropdown-item text="Item 5" action="menuItemClicked"}}
        {{smd-dropdown-item divider=true text="Item 6" action="menuItemClicked"}}
        {{smd-dropdown-item disabled=true text="Item 7" action="menuItemClicked"}}
        {{smd-dropdown-item text="Item 8" action="menuItemClicked"}}
      {{/smd-dropdown}}

      {{code-snippet name="smd-dropdown-icon.hbs"}}

    </section>

    <header class="smd-page__header" id="top">
      <h1 class="smd-page__title">Icon Dropdown Items</h1>
    </header>

    <section class="smd-page__body">

      <p>Dropdown menu with icon items</p>

      {{#smd-dropdown text="Text Icon Menu"}}
        {{#smd-dropdown-item icon="desktop_mac"}}Desktop{{/smd-dropdown-item}}
        {{#smd-dropdown-item icon="laptop_mac"}}Laptop{{/smd-dropdown-item}}
        {{#smd-dropdown-item icon="phone_iphone"}}Phone{{/smd-dropdown-item}}
      {{/smd-dropdown}}

      {{code-snippet name="smd-dropdown-icon-items.hbs"}}

    </section>

    <header class="smd-page__header" id="attributes">
      <h1 class="smd-page__title">Dropdown Attributes</h1>
    </header>

    <section class="smd-page__body">

      <table class="sg-table sg-table--attributes">
        <thead>
          <tr>
            <th>Attribute</th>
            <th>Description</th>
            <th>Type</th>
            <th>Default</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>text</td>
            <td>Defines the menu button text</td>
            <td><em>string</em></td>
            <td>null</td>
          </tr>
          <tr>
            <td>icon</td>
            <td>Defines the <a href="https://design.google.com/icons/">material design icon</a> used for the menu button</td>
            <td><em>string</em></td>
            <td>null</td>
          </tr>
            <tr>
              <td>align</td>
              <td>Defines the menu position. One of; <em>bottom-left</em>, <em>bottom-right</em>, <em>top-left</em>, <em>top-right</em></td>
              <td><em>string</em></td>
              <td>null</td>
            </tr>
        </tbody>
      </table>
    </section>

    <header class="smd-page__header" id="attributes">
      <h1 class="smd-page__title">Dropdown Item Attributes</h1>
    </header>

    <section class="smd-page__body">
      <table class="sg-table sg-table--attributes">
        <thead>
          <tr>
            <th>Attribute</th>
            <th>Description</th>
            <th>Type</th>
            <th>Default</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>text</td>
            <td>Defines the menu item text</td>
            <td><em>string</em></td>
            <td>null</td>
          </tr>
          <tr>
            <td>icon</td>
            <td>Defines the <a href="https://design.google.com/icons/">material design icon</a> used for the menu item</td>
            <td><em>string</em></td>
            <td>null</td>
          </tr>
          <tr>
            <td>disabled</td>
            <td>Set to true to disable the menu item</td>
            <td><em>boolean</em></td>
            <td>false</td>
          </tr>
          <tr>
            <td>divider</td>
            <td>Set to true to add a divider under the item</td>
            <td><em>boolean</em></td>
            <td>false</td>
          </tr>
        </tbody>
      </table>
    </section>

    <footer class="smd-page__footer">
      <p>View on <a href="https://github.com/sauce-consultants/ember-sauce-material-design">github</a></p>
    </footer>

</div>

