{{smd-header
  title="Tabs"
  backIcon="arrow_back"
  backAction="back"
  scrolling=true
}}
<div class="smd-page">

  <header class="smd-page__header" id="top">
    <h1 class="smd-page__title">Default Tabs</h1>
  </header>

   {{#smd-tabs}}
    {{smd-tab "Example" "tabs.index"}}
    {{smd-tab "Animation" "tabs.two"}}
    {{smd-tab "Tab 3" "tabs.three"}}
    {{smd-tab "Tab 4" "tabs.four"}}
  {{/smd-tabs}}

  <section class="smd-page__body">
    {{liquid-outlet class="smd-liquid--flex"}}
  </section>

  <header class="smd-page__header" id="attributes">
    <h1 class="smd-page__title">Attributes</h1>
  </header>

  <section class="smd-page__body">
    <table class="sg-table sg-table--attributes">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Description</th>
          <th>Type</th>
          <th>Default</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>align</td>
          <td>Defines the tab alignment. (left, right & center)</td>
          <td><em>string</em></td>
          <td>center</td>
        </tr>
      </tbody>
    </table>
  </section>


</div>
