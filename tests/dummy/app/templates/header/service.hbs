  <header class="smd-page__header" id="attributes">
    <h1 class="smd-page__title">Attributes</h1>
  </header>

  <section class="smd-page__body">
    <table class="sg-table sg-table--attributes">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Description</th>
          <th>Type</th>
          <th>Default</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>title</td>
          <td>String for the headers title</td>
          <td><em>string</em></td>
          <td>null</td>
        </tr>
        <tr>
          <td>backIcon</td>
          <td>The material icon name for back button, see <a href="https://material.io/icons">Material Docs</a></td>
          <td><em>string</em></td>
          <td>null</td>
        </tr>
        <tr>
          <td>fabIcon</td>
          <td>The material icon name for fab button, see <a href="https://material.io/icons">Material Docs</a></td>
          <td><em>string</em></td>
          <td>null</td>
        </tr>
        <tr>
          <td>isMiniFab</td>
          <td>Use a smaller fab button, requires fabIcon</td>
          <td><em>boolean</em></td>
          <td>false</td>
        </tr>
        <tr>
          <td>isRightFab</td>
          <td>Right align the fab button, requires fabIcon</td>
          <td><em>boolean</em></td>
          <td>false</td>
        </tr>
        <tr>
          <td>toolbarIconOne</td>
          <td>The material icon name for the first toolbar button, see <a href="https://material.io/icons">Material Docs</a></td>
          <td><em>string</em></td>
          <td>null</td>
        </tr>
        <tr>
          <td>toolbarIconTwo</td>
          <td>The material icon name for the second toolbar button, see <a href="https://material.io/icons">Material Docs</a></td>
          <td><em>string</em></td>
          <td>null</td>
        </tr>
        <tr>
          <td>toolbarIconThree</td>
          <td>The material icon name for the third toolbar button, see <a href="https://material.io/icons">Material Docs</a></td>
          <td><em>string</em></td>
          <td>null</td>
        </tr>
        <tr>
          <td>isMinimized</td>
          <td>Will render the header minimized if true</td>
          <td><em>boolean</em></td>
          <td>false</td>
        </tr>
        <tr>
          <td>scrolling</td>
          <td>Will collapse to minimized state on scroll</td>
          <td><em>boolean</em></td>
          <td>false</td>
        </tr>
        <tr>
          <td>scrollContext</td>
          <td>selector for sibling element that will effect the header on scroll</td>
          <td><em>boolean</em></td>
          <td>'.smd-page'</td>
        </tr>
      </tbody>
    </table>
  </section>

