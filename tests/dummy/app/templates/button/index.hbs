{{#smd-page}}

  {{smd-page-header title="Default Button"}}

  {{#smd-page-body}}

    <div class="sg-flex-row">
      {{smd-button text="Default" value=1 action="clickButton"}}
      {{smd-button text="Primary" isPrimary=true value=2 action="clickButton"}}
      {{smd-button text="Accent" isAccent=true value=3 action="clickButton"}}
      {{smd-button text="Disabled" disabled=true value=4 action="clickButton"}}
    </div>

