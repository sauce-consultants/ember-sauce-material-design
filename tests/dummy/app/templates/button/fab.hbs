  {{smd-page-header title="Attributes"}}

  {{#smd-page-body}}

    <p><em>smd-fab-service</em> has the following attributes.</p>

    <table class="sg-table sg-table--attributes">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Description</th>
          <th>Type</th>
          <th>Default</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>icon</td>
          <td>Icon name of the fab.</td>
          <td><em>string</em></td>
          <td>'add'</td>
        </tr>
        <tr>
          <td>align</td>
          <td>Horizontal location of the fab. 'left' or 'right'.</td>
          <td><em>string</em></td>
          <td>'right'</td>
        </tr>
        <tr>
          <td>isHidden</td>
          <td>Show/Hide the fab button</td>
          <td><em>boolean</em></td>
          <td>false</td>
        </tr>
        <tr>
          <td>isSmall</td>
          <td>Show a smaller instance of the fab</td>
          <td><em>boolean</em></td>
          <td>false</td>
        </tr>
        <tr>
          <td>isPrimary</td>
          <td>Primary styled fab button</td>
          <td><em>boolean</em></td>
          <td>false</td>
        </tr>
        <tr>
          <td>isAccent</td>
          <td>Accent styled fab button</td>
          <td><em>boolean</em></td>
          <td>false</td>
        </tr>
        <tr>
          <td>disabled</td>
          <td>Disable/Enable the fab button</td>
          <td><em>boolean</em></td>
          <td>false</td>
        </tr>
        <tr>
          <td>action</td>
          <td>Name of the action to call on fab click</td>
          <td><em>string</em></td>
          <td>'fabAction'</td>
        </tr>
      </tbody>
    </table>
  {{/smd-page-body}}

