{{#smd-page}}

  {{smd-page-header title="Icons"}}

  {{#smd-page-body}}

    <h2 class="smd-page__subtitle">Default Icon</h2>

    <div class="sg-flex-row">
      {{smd-icon icon="add_circle"}}
    </div>

    {{code-snippet name="smd-icon.hbs"}}

    <h2 class="smd-page__subtitle">Icon with Badge</h2>

    <div class="sg-flex-row">
      {{smd-icon icon="account_box" badge=6}}
    </div>

    {{code-snippet name="smd-icon-badge.hbs"}}

    <h2 class="smd-page__subtitle">Icon with no Background Badge</h2>

    <div class="sg-flex-row">
      {{smd-icon icon="photo_camera" badge=8 noBadgeBackground=true}}
    </div>

    {{code-snippet name="smd-icon-badge-no-bg.hbs"}}

    <h2 class="smd-page__subtitle">Icon with Overlapping Badge</h2>

    <div class="sg-flex-row">
      {{smd-icon icon="account_box" badge=4 badgeOverlap1=true}}
    </div>

    {{code-snippet name="smd-icon-badge-overlap.hbs"}}

  {{/smd-page-body}}

  {{smd-page-header title="Attributes"}}

  {{#smd-page-body}}

    <table class="sg-table sg-table--attributes">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Description</th>
          <th>Type</th>
          <th>Default</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>icon</td>
          <td>The material icon name, see <a href="https://material.io/icons">Material Docs</a></td>
          <td><em>string</em></td>
          <td>null</td>
        </tr>
        <tr>
          <td>badge</td>
          <td>Assigns string value to badge</td>
          <td><em>string</em></td>
          <td>null</td>
        </tr>
        <tr>
          <td>noBadgeBackground</td>
          <td>Applies open-circle effect to badge</td>
          <td><em>boolean</em></td>
          <td>false</td>
        </tr>
        <tr>
          <td>badgeOverlap</td>
          <td>Make the badge overlap with its container</td>
          <td><em>boolean</em></td>
          <td>false</td>
        </tr>
      </tbody>
    </table>
  {{/smd-page-body}}

  {{#smd-page-footer}}
    <p>View on <a href="https://github.com/sauce-consultants/ember-sauce-material-design">github</a></p>
  {{/smd-page-footer}}

{{/smd-page}}
