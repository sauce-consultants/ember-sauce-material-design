{{#if isTextarea}}
  {{textarea
    class=inputClasses
    name=name
    value=value
    type=type
    rows=rows
    cols=cols
    disabled=disabled}}
{{else if isSwitch}}
  {{mdl-switch text=label value=value disabled=disabled}}
{{else if isCheckbox}}
  {{mdl-checkbox text=label value=value disabled=disabled}}
{{else if isIcon}}
  {{smd-icon-toggle icon=icon value=value disabled=disabled}}
{{else if isRadio}}
  {{#each computedOptions as |option|}}
    {{mdl-radio
      name=name
      text=option.label
      value=option.value
      disabled=disabled
      on-change=(action 'checkOption')
      checked=option.selected}}
  {{/each}}
{{else if isSelect}}
  {{#select-box/native
    name=name
    value=value
    disabled=disabled
    on-select=(action 'selectedOption')
    class=inputClasses as |sb|}}
    {{#if hasNullOption}}
      {{sb.option value=null label=nullOption}}
    {{/if}}
    {{#each computedOptions as |option|}}
      {{sb.option value=option.value label=option.label selected=option.selected}}
    {{/each}}
  {{/select-box/native}}
{{else if isDate}}
  {{!--{{pikaday-input
    class=inputClasses
    name=name
    value=value
    disabled=disabled
    format=format
    placeholder=placeholder
    useUTC=useUTC
    onSelection=(action 'selectedDate')}}--}}
  {{ember-flatpickr
    allowInput=false
    clickOpens=true
    dateFormat='d M Y H:i'
    defaultDate=defaultDate
    defaultHour=0
    defaultMinute=0
    disable=datesToDisable
    disableMobile=false
    enable=datesToEnable
    enableSeconds=false
    enableTime=true
    hourIncrement=1
    inline=false
    maxDate=maxDate
    minDate=minDate
    minuteIncrement=5
    mode=mode
    nextArrow='>'
    noCalendar=false
    onChange=(action 'selectedDate')
    parseDate=false
    placeholder=label
    prevArrow='<'
    static=false
    timeFormat='H:i'
    time_24hr=true
    utc=false
    name=name    
    value=value
    wrap=false
    disabled=disabled}}

{{else}}
  {{input
    class=inputClasses
    name=name
    value=value
    type=type
    max=max
    min=min
    step=step
    disabled=disabled}}
{{/if}}

{{#if hasLabel}}
  <label class="{{labelClasses}}" for="{{name}}">{{label}}</label>
{{/if}}

{{#if showErrorMessage}}
  <div class="smd-form__error">{{v-get model name 'message'}}</div>
{{/if}}

{{#if showWarningMessage}}
  <div class="smd-form__warning">{{v-get model name 'warningMessage'}}</div>
{{/if}}

{{#if showTip}}
  <div class="smd-form__tip">{{tip}}</div>
{{/if}}

{{yield}}
