{{yield sections.top}}

{{#if hasCoverImageSrc}}
  <div class="smd-header__cover-image" style="background-image: {{coverImageSrc}}"></div>
{{/if}}

{{#if hasCoverImageClass}}
  <div class="smd-header__cover-image {{coverImageClass}}"></div>
{{/if}}

<div class="smd-header__toolbar smd-header__toolbar--top">

  {{#if hasBack}}
    {{smd-button icon=_backIcon isColored=false class="smd-header__action smd-header__action--back-max" action='backAction'}}
  {{/if}}

  {{#if hasCrumb}}
    <div class="smd-header__crumb" {{action 'backAction'}}>
      {{_crumb}}
    </div>
  {{/if}}

  <div class="spacer"></div>

  {{#if hasToolbarOne}}
    {{smd-toolbar-item icon=_toolbarIconOne options=_toolbarOptionsOne selectedOption=_toolbarSelectedOptionOne action='toolbarActionOne'}}
  {{/if}}

  {{#if hasToolbarTwo}}
    {{smd-toolbar-item icon=_toolbarIconTwo options=_toolbarOptionsTwo selectedOption=_toolbarSelectedOptionTwo action='toolbarActionTwo'}}
  {{/if}}

  {{#if hasSearch}}
    {{smd-search-widget action='searchAction' term=searchTerm}}
  {{else if hasToolbarThree}}
    {{smd-toolbar-item icon=_toolbarIconThree options=_toolbarOptionsThree selectedOption=_toolbarSelectedOptionThree action='toolbarActionThree'}}
  {{/if}}

  {{yield sections.toolbar}}

</div>

<div class="smd-header__toolbar smd-header__toolbar--middle">
  {{yield sections.middle}}
</div>

<div class="smd-header__toolbar smd-header__toolbar--bottom">
  {{#if hasBack}}
    {{smd-button icon=_backIcon isColored=false class="smd-header__action smd-header__action--back-min" action='backAction'}}
  {{/if}}
  {{#if hasTitle}}
    <h1 class="smd-header__title">{{_title}}</h1>
  {{/if}}
  {{yield sections.title}}

</div>

{{#if hasFab}}
  {{smd-button icon=_fabIcon isFab=true isColored=true isMiniFab=_isMiniFab isFloating=true action='fabAction' class=fabClassNames}}
{{/if}}

{{yield sections.bottom}}
