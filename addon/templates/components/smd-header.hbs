{{#if hasCoverImageSrc}}
  <div class="smd-header__cover-image" style="background-image: {{coverImageSrc}}"></div>
{{/if}}

{{#if hasCoverImageClass}}
  <div class="smd-header__cover-image {{coverImageClass}}"></div>
{{/if}}

<div class="smd-header__toolbar smd-header__toolbar--top">

  {{#if hasBack}}
    {{smd-button icon=backIcon isColored=false class="smd-header__action smd-header__action--back" action='backAction'}}
  {{/if}}

  <div class="spacer"></div>

  {{#if hasToolbarOne}}
    {{smd-button icon=toolbarIconOne isColored=false class="smd-header__action" action='toolbarActionOne'}}
  {{/if}}

  {{#if hasToolbarTwo}}
    {{smd-button icon=toolbarIconTwo isColored=false class="smd-header__action" action='toolbarActionTwo'}}
  {{/if}}

  {{#if hasSearch}}
    {{smd-search-widget action='searchAction' term=searchTerm}}
  {{/if}}

  {{#if hasToolbarThree}}
    {{smd-button icon=toolbarIconThree isColored=false class="smd-header__action" action='toolbarActionThree'}}
  {{/if}}

</div>

<div class="smd-header__toolbar smd-header__toolbar--middle"></div>

<div class="smd-header__toolbar smd-header__toolbar--bottom">
  <h1 class="smd-header__title">{{title}}</h1>
  {{yield}}
</div>

{{#if hasFab}}
  {{smd-button icon=fabIcon isFab=true isColored=true isMiniFab=isMiniFab isFloating=true action='fabAction' class=fabClassNames}}
{{/if}}
